<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3374de"
        android:padding="@dimen/_10sdp">


        <ImageView
            android:id="@+id/backarr"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/back_arrow" />


        <TextView
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="RESET PASSWORD"
            android:textColor="@color/white" />


    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool"
        android:background="@drawable/reset_password_bg">


        <RelativeLayout
            android:id="@+id/relativeSubMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp">

            <TextView
                android:id="@+id/tvVerifivation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="RESET PASSWORD"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvVerifivation"
                android:layout_marginTop="@dimen/_10ssp"
                android:gravity="center"
                android:text="Please enter your new password"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="normal" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeSubMain"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:theme="@style/StyledTilEditTextThemeNew">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edEmailID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:hint="EMAIL-ID"
                    android:imeOptions="actionGo"
                    android:inputType="text"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_12sdp"
                    app:backgroundTint="#FF40C0F9" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tilOne"
                android:layout_marginTop="@dimen/_10sdp"
                android:theme="@style/StyledTilEditTextThemeNew">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:hint="NEW PASSWORD"
                    android:imeOptions="actionGo"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_12sdp"
                    app:backgroundTint="#FF40C0F9" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tilTwo"
                android:layout_marginTop="@dimen/_10sdp"
                android:theme="@style/StyledTilEditTextThemeNew">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edPasswordConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:hint="CONFIRM NEW PASSWORD"
                    android:imeOptions="actionGo"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_12sdp"
                    app:backgroundTint="#FF40C0F9" />
            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeEdittext"
            android:padding="@dimen/_20sdp">


            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_65sdp"
                android:background="@drawable/resend_btn_bg"
                android:gravity="center"
                android:padding="@dimen/_10ssp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>